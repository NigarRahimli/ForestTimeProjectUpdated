@model HomeVM

<section class="section first-section">
    <div class="container-fluid">
        <div class="masonry-blog clearfix">
            @foreach (var best in Model.BestArticles)
            {

                <div class="left-side">
                    <div class="masonry-box post-media">
                        <img src="@best.PhotoUrl" alt="" class="img-fluid">
                        <div class="shadoweffect">
                            <div class="shadow-desc">
                                <div class="blog-meta">
                                    <span class="bg-aqua"><a href="/category/index/@best.Category.Id" title="">@best.Category.CategoryName</a></span>
                                    <h4><a href="/article/detail/@best.Id" title="">@best.Title</a></h4>
                                    @using System.Globalization
                                    @{
                                        CultureInfo englishCulture = new CultureInfo("en-US");
                                        string createdDate = best.CreatedDate.ToString("dd MMMM, yyyy", englishCulture);
                                    }
                                    <small><a href="/" title="">@createdDate</a></small>
                                    <small><a href="#" title="">by @best.User.FirstName</a></small>
                                </div><!-- end meta -->


                            </div><!-- end shadow-desc -->
                        </div><!-- end shadow -->
                    </div><!-- end post-media -->
                </div>

                <!-- end left-side -->
            }
        </div><!-- end masonry -->
    </div>
</section>

<section class="section wb">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                <div class="page-wrapper">
                     @foreach (var article in Model.HomeArticles)
                        {
                    <div class="blog-list clearfix">
                        <div class="blog-box row">
                            <div class="col-md-4">
                                <div class="post-media">
                                    <a href="/article/detail/@article.Id" title="">
                                            <img src="@article.PhotoUrl" alt="Article" class="img-fluid">
                                        <div class="hovereffect"></div>
                                    </a>
                                </div><!-- end media -->
                            </div><!-- end col -->

                            <div class="blog-meta big-meta col-md-8">
                                <span class="bg-aqua"><a href="garden-category.html" title="">@article.Category.CategoryName</a></span>
                                <h4><a href="/article/detail/@article.Id" title="">@article.Title</a></h4>
                                <p>@article.Content.Substring(0,150)...</p>
                                <small><a href="garden-category.html" title=""><i class="fa fa-eye"></i> @article.Views</a></small>
                                    @using System.Globalization
                                    @{
                                        CultureInfo englishCulture = new CultureInfo("en-US");
                                        string createdDate = article.CreatedDate.ToString("dd MMMM, yyyy", englishCulture);
                                    }
                                    <small><a href="/" title="">@createdDate</a></small>
                                <small><a href="#" title="">by  @article.User.FirstName</a></small>
                            </div><!-- end meta -->
                        </div><!-- end blog-box -->
                       

                        <br/>
                    
                       

                    </div><!-- end blog-list -->
               }

               </div><!-- end page-wrapper -->

                <hr class="invis">

                <div class="row">
                    <div class="col-md-12">
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-start">
                                <li class="page-item"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div><!-- end col -->
                </div><!-- end row -->
            </div><!-- end col -->

       